<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">



    <Transition
        android:id="@+id/background_transition"
        motion:constraintSetStart="@id/background_start"
        motion:constraintSetEnd="@+id/background_end"
        motion:duration="1000"
        motion:autoTransition="none">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/logo_image_view"
                motion:framePosition="0">
                <CustomAttribute
                    motion:attributeName="scaleX"
                    motion:customFloatValue="0.1" />
                <CustomAttribute
                    motion:attributeName="scaleY"
                    motion:customFloatValue="0.1" />
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0" />
            </KeyAttribute>
            <KeyAttribute
                motion:motionTarget="@+id/logo_image_view"
                motion:framePosition="50">
                <CustomAttribute
                    motion:attributeName="scaleX"
                    motion:customFloatValue="0.1" />
                <CustomAttribute
                    motion:attributeName="scaleY"
                    motion:customFloatValue="0.1" />
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.2" />
            </KeyAttribute>
            <KeyAttribute
                motion:motionTarget="@+id/logo_image_view"
                motion:framePosition="100">
                <CustomAttribute
                    motion:attributeName="scaleX"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="scaleY"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1" />
            </KeyAttribute>

            <KeyAttribute
                motion:motionTarget="@+id/title_text_view"
                motion:framePosition="0">
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0" />
            </KeyAttribute>
            <KeyAttribute
                motion:motionTarget="@+id/title_text_view"
                motion:framePosition="50">
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.2" />
            </KeyAttribute>
            <KeyAttribute
                motion:motionTarget="@+id/title_text_view"
                motion:framePosition="100">
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1" />
            </KeyAttribute>
        </KeyFrameSet>


    </Transition>


    <ConstraintSet android:id="@+id/background_start">
        <Constraint
            android:id="@+id/black_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customDimension="-500dp" />
        </Constraint>
        <Constraint
            android:id="@+id/white_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customDimension="500dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/background_end">
        <Constraint
            android:id="@+id/black_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint
            android:id="@+id/white_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customDimension="0dp" />
        </Constraint>
    </ConstraintSet>
</MotionScene>