<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="newApi">
    <!--
    https://developer.android.com/guide/topics/resources/animation-resource
    https://developer.android.com/reference/android/graphics/drawable/AnimatedVectorDrawable.html?hl=en
    -->
    <aapt:attr name="android:drawable">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24.0"
            android:viewportHeight="24.0">
        <group
        android:name="group_all"
        android:pivotX="12"
        android:pivotY="12"
        android:rotation="45">
        <path
            android:name="one"
            android:fillColor="#FF000000"
            android:pathData="M3,11    l18,0        l0,2       l-18,0     l0,-2      z"/>
        <group
            android:name="group_two"
            android:pivotX="12"
            android:pivotY="12"
            android:rotation="0" >

            <path
                android:name="two"
                android:pivotX="12"
                android:pivotY="12"
                android:fillColor="#FF000000"
                android:pathData="M13,3    l0,18        l-2,0       l0,-18     l2,0      z"/>
        </group>
        <path
            android:name="three"
            android:fillColor="#FF000000"
            android:pathData="M3,11    l18,0        l0,2       l-18,0     l0,-2      z"/>
    </group>
</vector>
    </aapt:attr>

    <target android:name="one">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:valueFrom=  "M3,11    l18,0        l0,2       l-18,0     l0,-2      z"
                android:valueTo="M3,6     l18,0        l0,2       l-18,0     l0,-2      z"
                android:duration="1000"
                android:valueType="pathType" />
        </aapt:attr>
    </target>

    <target android:name="group_two">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:propertyName="rotation"
                android:valueFrom="0"
                android:valueTo="-90"/>
        </aapt:attr>
    </target>

    <target android:name="three">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:valueFrom=  "M3,11    l18,0        l0,2       l-18,0     l0,-2      z"
                android:valueTo="M3,16    l18,0        l0,2       l-18,0     l0,-2      z"
                android:duration="1000"
                android:valueType="pathType" />
        </aapt:attr>
    </target>

    <target android:name="group_all">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:propertyName="rotation"
                android:valueFrom="45"
                android:valueTo="-180"/>
        </aapt:attr>
    </target>


</animated-vector>

