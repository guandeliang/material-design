<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_example_graph"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="com.jacob.book.material.example.tab.TabBaseMainFragment"
        android:label="main"
        tools:layout="@layout/tab_base_main_fragment">

        <action
            android:id="@+id/show_detail"
            app:destination="@id/detail"
            app:enterAnim="@anim/nav_alpha_scale_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/nav_alpha_scale_enter"
            app:popExitAnim="@anim/fragment_open_exit" />


    </fragment>

    <fragment
        android:id="@+id/detail"
        android:name="com.jacob.book.material.example.tab.TabBaseDetailFragment"
        android:label="detail"
        tools:layout="@layout/tab_base_detail_fragment" >
    </fragment>

</navigation>