<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_app_bar_base_graph"
    app:startDestination="@id/index">

    <action android:id="@+id/show_search" app:destination="@id/search"/>
    <action android:id="@+id/show_detail" app:destination="@id/detail"/>

    <fragment
        android:id="@+id/index"
        android:name="com.jacob.book.material.example.bottomnavigation.BottomNavigationDemoIndexFragment"
        android:label="index"
        tools:layout="@layout/bottom_navigation_demo_index_fragment">

    </fragment>

    <fragment
        android:id="@+id/library"
        android:name="com.jacob.book.material.example.bottomnavigation.BottomNavigationDemoLibraryFragment"
        android:label="library"
        tools:layout="@layout/bottom_navigation_demo_library_fragment">
    </fragment>

    <fragment
        android:id="@+id/play_list"
        android:name="com.jacob.book.material.example.bottomnavigation.BottomNavigationDemoPlayListFragment"
        android:label="play_list"
        tools:layout="@layout/bottom_navigation_demo_play_list_fragment">
    </fragment>


    <fragment
        android:id="@+id/live"
        android:name="com.jacob.book.material.example.bottomnavigation.BottomNavigationDemoLibraryLiveFragment"
        android:label="play_list"
        tools:layout="@layout/bottom_navigation_demo_library_live_fragment">
    </fragment>


    <fragment
        android:id="@+id/search"
        android:name="com.jacob.book.material.example.bottomnavigation.BottomNavigationDemoSearchFragment"
        android:label="search"
        tools:layout="@layout/bottom_navigation_demo_search_fragment">
    </fragment>


    <fragment
        android:id="@+id/detail"
        android:name="com.jacob.book.material.example.bottomnavigation.BottomNavigationDemoLibraryDetailFragment"
        android:label="detail"
        tools:layout="@layout/bottom_navigation_demo_library_detail_fragment">
    </fragment>

</navigation>