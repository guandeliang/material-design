<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="72dp"
        android:paddingBottom="72dp"
        app:layoutDescription="@xml/motion_layout_attribute_pieces_fragment_scene"
        app:motionDebug="SHOW_PATH">

        <TextView
            android:id="@+id/visibility_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="android:visibility"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/visibility_view"/>

        <View
            android:id="@+id/visibility_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF0000"
            app:layout_constraintTop_toBottomOf="@id/visibility_text_view"
            app:layout_constraintBottom_toTopOf="@id/alpha_text_view"/>


        <TextView
            android:id="@+id/alpha_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="android:alpha"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/visibility_view"
            app:layout_constraintBottom_toTopOf="@id/alpha_view"/>


        <View
            android:id="@+id/alpha_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF0000"
            app:layout_constraintTop_toBottomOf="@id/alpha_text_view"
            app:layout_constraintBottom_toTopOf="@id/elevation_text_view"/>


        <TextView
            android:id="@+id/elevation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="android:elevation"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alpha_view"
            app:layout_constraintBottom_toTopOf="@id/elevation_view"/>

        <View
            android:id="@+id/elevation_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF0000"
            app:layout_constraintTop_toBottomOf="@id/elevation_text_view"
            app:layout_constraintBottom_toTopOf="@id/scale_text_view"/>


        <TextView
            android:id="@+id/scale_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="android:scaleX, android:scaleY"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/elevation_view"
            app:layout_constraintBottom_toTopOf="@id/scale_view"/>

        <View
            android:id="@+id/scale_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF0000"
            app:layout_constraintTop_toBottomOf="@id/scale_text_view"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>