<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/grammy_008_back_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/vip_logo_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_wb_sunny"
            android:tint="@color/material_color_orange"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:text="VIP每日土鳖推荐"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toTopOf="@id/vip_logo_image_view"
            app:layout_constraintBottom_toBottomOf="@id/vip_logo_image_view"
            app:layout_constraintLeft_toRightOf="@id/vip_logo_image_view"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/one_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/vip_logo_image_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/two_card_view"
            app:layout_constraintDimensionRatio="H,1:1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/grammy_008_007"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/two_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/one_card_view"
            app:layout_constraintBottom_toTopOf="@id/three_card_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="H,1:1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/grammy_008_008"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/three_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/two_card_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="H,1:1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/grammy_008_009"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/one_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:text="心静自然凉"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@id/one_card_view"
            app:layout_constraintBottom_toBottomOf="@id/one_card_view"
            app:layout_constraintLeft_toRightOf="@id/one_card_view"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:text="因为你丑"
            android:textColor="@color/gray_300"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            app:layout_constraintBaseline_toBaselineOf="@id/one_text_view"
            app:layout_constraintLeft_toRightOf="@id/one_text_view"/>

        <TextView
            android:id="@+id/two_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:text="大哥大哥你找嘛"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@id/two_card_view"
            app:layout_constraintBottom_toBottomOf="@id/two_card_view"
            app:layout_constraintLeft_toRightOf="@id/two_card_view"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:text="可是我温柔"
            android:textColor="@color/gray_300"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            app:layout_constraintBaseline_toBaselineOf="@id/two_text_view"
            app:layout_constraintLeft_toRightOf="@id/two_text_view"/>

        <TextView
            android:id="@+id/three_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:text="小白兔之歌"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@id/three_card_view"
            app:layout_constraintBottom_toBottomOf="@id/three_card_view"
            app:layout_constraintLeft_toRightOf="@id/three_card_view"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:text="小锥佩奇"
            android:textColor="@color/gray_300"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            app:layout_constraintBaseline_toBaselineOf="@id/three_text_view"
            app:layout_constraintLeft_toRightOf="@id/three_text_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>



