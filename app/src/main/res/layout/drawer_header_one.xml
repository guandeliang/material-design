<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="72dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="48dp"/>
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="洪安通"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/v_guide_line"/>
    <TextView
        android:id="@+id/organization_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:text="广西省从做事江州区驮柏村神龙岛神龙教"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/v_guide_line"/>

    <ImageView
        android:id="@+id/certification_image_view"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_check_circle"
        android:tint="@color/material_color_orange"
        app:layout_constraintTop_toBottomOf="@id/organization_text_view"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/certification_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_marginLeft="12dp"
        android:text="高级认证"
        app:layout_constraintTop_toTopOf="@id/certification_image_view"
        app:layout_constraintBottom_toBottomOf="@id/certification_image_view"
        app:layout_constraintLeft_toRightOf="@id/certification_image_view"/>

    <TextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="洪"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:background="@drawable/shape_primary_color_circle_fill"
        android:textColor="@color/gray_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/v_guide_line"
        app:layout_constraintRight_toRightOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>