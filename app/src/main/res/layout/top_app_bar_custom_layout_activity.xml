<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back_image_view"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:padding="12dp"
                    android:tint="?attr/colorOnPrimary"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/icon_arrow_back"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/logo_image_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toRightOf="@id/back_image_view"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="?attr/colorOnPrimary"
                    app:srcCompat="@drawable/logo_small"/>

                <TextView
                    android:id="@+id/title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialBook.SingleColor.Colored.AppBarLayout.Title"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="@id/logo_image_view"
                    app:layout_constraintBottom_toBottomOf="@id/logo_image_view"
                    app:layout_constraintLeft_toRightOf="@id/logo_image_view"
                    android:text="谷歌UI标准"/>
                <TextView
                    android:id="@+id/sub_title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialBook.SingleColor.Colored.AppBarLayout.SubTitle"
                    app:layout_constraintTop_toBottomOf="@id/logo_image_view"
                    app:layout_constraintLeft_toLeftOf="@id/logo_image_view"
                    android:text="Material Design Demo"/>


                <ImageView
                    android:id="@+id/more_image_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="8dp"
                    android:tint="?attr/colorOnPrimary"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/icon_more_vert"/>

                <ImageView
                    android:id="@+id/favorite_image_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:tint="?attr/colorOnPrimary"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintRight_toLeftOf="@id/more_image_view"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/icon_favorite"/>

                <ImageView
                    android:id="@+id/share_image_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="24dp"
                    android:tint="?attr/colorOnPrimary"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintRight_toLeftOf="@id/favorite_image_view"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/icon_share"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:lineSpacingExtra="4dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@string/toolbar_custom_layout"/>


    </LinearLayout>
</layout>