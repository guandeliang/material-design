<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/v_card_view_001"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="48dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/gray_200"
        app:layout_constraintTop_toTopOf="@id/card_view_001"
        app:layout_constraintBottom_toBottomOf="@id/card_view_005"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_001"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardElevation="1dp"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view_002">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_vertical|right"
            app:cardBackgroundColor="@color/material_color_red"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialBook.Round.4"
            app:cardElevation="4dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_002"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card_view_001"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view_003">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_vertical|right"
            app:cardBackgroundColor="@color/material_color_purple"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialBook.Round.16"
            app:cardElevation="4dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_003"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_view_002"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view_004">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_vertical|right"
            app:cardBackgroundColor="@color/material_color_blue"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialBook.Round"
            app:cardElevation="4dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_004"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_view_003"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view_005">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_vertical|right"
            app:cardBackgroundColor="@color/material_color_amber"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialBook.Round.LeftTop.24"
            app:cardElevation="4dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_005"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_view_004"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_vertical|right"
            app:cardBackgroundColor="@color/material_color_deep_orange"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialBook.Diamond"
            app:cardElevation="4dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/v_card_view_002"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/gray_200"
        app:layout_constraintTop_toTopOf="@id/card_view_001"
        app:layout_constraintBottom_toBottomOf="@id/card_view_005"
        app:layout_constraintLeft_toRightOf="@id/v_card_view_001"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/v_card_view_003"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="@id/card_view_001"
        app:layout_constraintBottom_toBottomOf="@id/card_view_005"
        app:layout_constraintLeft_toRightOf="@id/v_card_view_002"/>

</androidx.constraintlayout.widget.ConstraintLayout>






