<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="36dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/logo_text_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="洪"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:background="@drawable/primary_color_circle_fill"
        android:textColor="@color/gray_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="洪安通"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/logo_text_view"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/organization_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:text="广西省驮柏村神龙岛神龙教"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/title_text_view"
        app:layout_constraintLeft_toRightOf="@id/logo_text_view"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>