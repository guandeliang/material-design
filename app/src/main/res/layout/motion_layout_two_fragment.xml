<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data/>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_layout_two_fragment_scene">

        <ImageView
            android:id="@+id/center_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/motion_point"
            android:alpha="0"
            android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/one_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/motion_point"
            android:tint="#073540"
            app:layout_constraintCircle="@id/center_image_view"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/two_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/motion_point"
            android:tint="#730A1D"
            app:layout_constraintCircle="@id/center_image_view"
            app:layout_constraintCircleAngle="288"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/three_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/motion_point"
            android:tint="#D99982"
            app:layout_constraintCircle="@id/center_image_view"
            app:layout_constraintCircleAngle="216"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <ImageView
            android:id="@+id/four_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/motion_point"
            android:tint="#4EA69D"
            app:layout_constraintCircle="@id/center_image_view"
            app:layout_constraintCircleAngle="144"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/five_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/motion_point"
            android:tint="#3B403E"
            app:layout_constraintCircle="@id/center_image_view"
            app:layout_constraintCircleAngle="72"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/pic_one_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/motion_two_one"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/pic_two_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/motion_two_two"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/pic_three_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/motion_two_three"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/pic_four_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/motion_two_four"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/pic_five_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/motion_two_five"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:id="@+id/one_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/crimson_text_bold"
            android:text="Android App"
            android:clickable="true"
            android:translationX="-300dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintTop_toBottomOf="@id/pic_one_image_view"
            app:layout_constraintLeft_toLeftOf="@id/pic_one_image_view"
            app:layout_constraintRight_toRightOf="@id/pic_one_image_view"/>

        <TextView
            android:id="@+id/two_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/crimson_text_bold"
            android:text="Material Design"
            android:clickable="true"
            android:translationX="-300dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintTop_toBottomOf="@id/pic_two_image_view"
            app:layout_constraintLeft_toLeftOf="@id/pic_two_image_view"
            app:layout_constraintRight_toRightOf="@id/pic_two_image_view"/>

        <TextView
            android:id="@+id/three_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/crimson_text_bold"
            android:text="Motion Layout"
            android:clickable="true"
            android:translationX="-300dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintTop_toBottomOf="@id/pic_three_image_view"
            app:layout_constraintLeft_toLeftOf="@id/pic_three_image_view"
            app:layout_constraintRight_toRightOf="@id/pic_three_image_view"/>

        <TextView
            android:id="@+id/four_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/crimson_text_bold"
            android:text="Translation"
            android:clickable="true"
            android:translationX="-300dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintTop_toBottomOf="@id/pic_four_image_view"
            app:layout_constraintLeft_toLeftOf="@id/pic_four_image_view"
            app:layout_constraintRight_toRightOf="@id/pic_four_image_view"/>

        <TextView
            android:id="@+id/five_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/crimson_text_bold"
            android:text="Constraint Layout"
            android:clickable="true"
            android:translationX="-300dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintTop_toBottomOf="@id/pic_five_image_view"
            app:layout_constraintLeft_toLeftOf="@id/pic_five_image_view"
            app:layout_constraintRight_toRightOf="@id/pic_five_image_view"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>